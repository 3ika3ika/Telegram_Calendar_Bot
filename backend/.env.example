# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/telegram_calendar

# Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBAPP_SECRET=your_webapp_secret_here
TELEGRAM_BOT_WEBHOOK_SECRET=optional_webhook_secret

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4o-mini

# App
SECRET_KEY=change-me-in-production-use-random-string
DEBUG=false
CORS_ORIGINS=["https://web.telegram.org","https://telegram.org"]

# Redis (optional)
REDIS_URL=redis://localhost:6379/0

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=noreply@example.com

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn_here

# Rate limiting
RATE_LIMIT_PER_MINUTE=60